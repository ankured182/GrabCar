@{
    ViewBag.Title = "Second";
}

<div class="container">
    <div class="col-lg-12 ">
        <div class="driveHeader">Become a Desh Driver by filling these easy steps:</div>
        <div class="col-lg-12 driverDiv">
            <div class="col-lg-6">
                What car or model do you drive ?
            </div>
            <div class="col-lg-6">
                <input type="text" class="tableText" placeholder="eg : toyota corolla" />
            </div>
        </div>
        <div class="col-lg-12 driverDiv">
            <div class="col-lg-6">
                What is the year of manufacture for your car?
            </div>
            <div class="col-lg-6">
                <input type="text" class="tableText" placeholder="eg : 2006" />
            </div>
        </div>
        <div class="col-lg-12 driverDiv">
            <div class="col-lg-6">
                Specify the CC of your car
            </div>
            <div class="col-lg-6">
                <input type="text" class="tableText" placeholder="eg : 800-1900 or 2000-5000" />
            </div>
        </div>
        <div class="col-lg-12 driverDiv">
            <div class="col-lg-6">
                Car Number plate
            </div>
            <div class="col-lg-6">
                <input type="text" class="tableText" />
            </div>
        </div>
        

        @using (Html.BeginForm("Final", "SignUp", FormMethod.Get))
        {
            <input type="submit" value="Yey you’re almost done !" class="btn btn-success pull-right driveBtn" />
        }
    </div>


</div>
